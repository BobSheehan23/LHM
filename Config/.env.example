# Environment Configuration Template for LHM Repository
# Copy this file to .env and fill in your actual API keys and configuration

# Federal Reserve Economic Data (FRED) API
# Get your free API key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage API (for additional market data)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Quandl API (if using Quandl data)
# Get your API key at: https://www.quandl.com/tools/api
QUANDL_API_KEY=your_quandl_api_key_here

# Database Configuration (if applicable)
DATABASE_USER=your_database_username
DATABASE_PASSWORD=your_database_password
DATABASE_DSN=your_database_connection_string

# Email Configuration for Daily Digest
EMAIL_SENDER=your_email@domain.com
EMAIL_PASSWORD=your_email_password
EMAIL_RECIPIENT=recipient@domain.com

# SMTP Server Configuration
SMTP_SERVER=smtp.yourdomain.com
SMTP_PORT=587

# Data Storage Configuration
DATA_DIRECTORY=./data
CACHE_DIRECTORY=./cache
REPORTS_DIRECTORY=./reports

# Analysis Configuration
DEFAULT_START_DATE=2020-01-01
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=US/Eastern

# Visualization Settings
CHART_THEME=plotly_white
CHART_WIDTH=1200
CHART_HEIGHT=600

# Development Settings
DEBUG_MODE=False
LOG_LEVEL=INFO
JUPYTER_PORT=8888
