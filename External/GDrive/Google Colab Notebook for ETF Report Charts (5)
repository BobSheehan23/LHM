(False)\nax1.spines['right'].set_visible(False)\nax1.get_yaxis().set_major_formatter(plt.FuncFormatter(lambda y, p: format(int(y), ',')))\n\n# Function to attach a data label above each bar with the exact, un-rounded number\ndef autolabel(rects, ax):\n    for rect in rects:\n        height = rect.get_height()\n        ax.annotate(f'{format(height, \",\")}',\n                    xy=(rect.get_x() + rect.get_width() / 2, height),\n                    xytext=(0, 3),  # 3 points vertical offset\n                    textcoords=\"offset points\",\n                    ha='center', va='bot","outputs":[],"execution_count":null,"metadata":{}}],"metadata":{"colab":{"from_bard":true},"kernelspec":{"display_name":"Python 3","name":"python3"}},"nbformat":4,"nbformat_minor":0}