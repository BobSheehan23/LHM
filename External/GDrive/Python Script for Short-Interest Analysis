{"cells":[{"cell_type":"code","source":"import pandas as pd\nimport numpy as np\n\ndef run_short_interest_analysis(csv_filepath):\n    \"\"\"\n    Reads the provided CSV file and runs three separate analyses on the data:\n    1. Decile performance based on short interest.\n    2. Top/Bottom 50 stocks by short interest.\n    3. Top/Bottom 1% of stocks by short interest.\n\n    Args:\n        csv_filepath (str): The path to the input CSV file.\n    \"\"\"\n    try:\n        # Load the dataset from the provided CSV file\n        df = pd.read_csv(csv_filepath)\n        print(\"CSV file loaded successfully.\")\n    except FileNotFoundError:\n        print(f\"Error: The file '{csv_filepath}' was not found.\")\n        return\n\n    # Ensure the dataframe is sorted by the combined short interest score\n    df = df.sort_values('combined_si').reset_index(drop=True)\n    print(f\"Loaded and sorted {len(df)} stocks for analysis.\")\n\n    # --- 1. Decile Analysis ---\n    print(\"\\n\" + \"=\"*40)\n    print(\"ANALYSIS 1: PERFORMANCE BY DECILE\")\n    print(\"=\"*40)\n    # Create 10 equal-sized groups based on the 'combined_si' score\n    df['decile'] = pd.qcut(df['combined_si'].rank(method='first'), 10, labels=False) + 1\n    decile_analysis = df.groupby('decile')['return_ytd'].agg(['mean', 'median'])\n    decile_analysis = decile_analysis.rename(columns={'mean': 'Mean YTD Return', 'median': 'Median YTD Return'})\n    # Format the results as percentages\n    decile_analysis['Mean YTD Return'] = decile_analysis['Mean YTD Return'].map('{:.1%}'.format)\n    decile_analysis['Median YTD Return'] = decile_analysis['Median YTD Return'].map('{:.1%}'.format)\n    print(decile_analysis)\n\n    # --- 2. Top/Bottom 50 Analysis ---\n    print(\"\\n\" + \"=\"*40)\n    print(\"ANALYSIS 2: TOP 50 vs. BOTTOM 50\")\n    print(\"=\"*40)\n    bottom_50 = df.head(50)\n    top_50 = df.tail(50)\n    \n    top_bottom_50_results = {\n        \"Group\": [\"Bottom 50 Least Shorted\", \"Top 50 Most Shorted\"],\n        \"Mean YTD Return\": [\n            f\"{bottom_50['return_ytd'].mean():.1%}\",\n            f\"{top_50['return_ytd'].mean():.1%}\"\n        ],\n        \"Median YTD Return\": [\n            f\"{bottom_50['return_ytd'].median():.1%}\",\n            f\"{top_50['return_ytd'].median():.1%}\"\n        ]\n    }\n    top_bottom_50_df = pd.DataFrame(top_bottom_50_results)\n    print(top_bottom_50_df.to_string(index=False))\n\n\n    # --- 3. Top/Bottom 1% Analysis ---\n    print(\"\\n\" + \"=\"*40)\n    print(\"ANALYSIS 3: TOP 1% vs. BOTTOM 1%\")\n    print(\"=\"*40)\n    one_percent_count = int(len(df) * 0.01)\n    \n    bottom_1_pct = df.head(one_percent_count)\n    top_1_pct = df.tail(one_percent_count)\n\n    top_bottom_1_pct_results = {\n        \"Group\": [\n            f\"Bottom 1% Least Shorted ({one_percent_count} stocks)\",\n            f\"Top 1% Most Shorted ({one_percent_count} stocks)\"\n        ],\n        \"Mean YTD Return\": [\n            f\"{bottom_1_pct['return_ytd'].mean():.1%}\",\n            f\"{top_1_pct['return_ytd'].mean():.1%}\"\n        ],\n        \"Median YTD Return\": [\n            f\"{bottom_1_pct['return_ytd'].median():.1%}\",\n            f\"{top_1_pct['return_ytd'].median():.1%}\"\n        ]\n    }\n    top_bottom_1_pct_df = pd.DataFrame(top_bottom_1_pct_results)\n    print(top_bottom_1_pct_df.to_string(index=False))\n    print(\"\\n\" + \"=\"*40)\n\n\nif __name__ == '__main__':\n    # To run this script, save the CSV data into a file named 'r3k_ytd_analysis_data.csv'\n    # and place it in the same directory as this script.\n    run_short_interest_analysis('r3k_ytd_analysis_data.csv')","outputs":[],"execution_count":null,"metadata":{}}],"metadata":{"colab":{"from_bard":true},"kernelspec":{"display_name":"Python 3","name":"python3"}},"nbformat":4,"nbformat_minor":0}