  # Ticker\n","            td_ticker = soup.new_tag('td')\n","            td_ticker.string = str(row['Ticker'])\n","            tr.append(td_ticker)\n","\n","            # Company Name\n","            td_name = soup.new_tag('td')\n","            td_name.string = str(row['CompanyName'])\n","            tr.append(td_name)\n","\n","            # Industry\n","            td_industry = soup.new_tag('td')\n","            td_industry.string = str(row['Industry'])\n","            tr.append(td_industry)\n","\n","            # Price\n","            td_price = soup.new_tag('td')\n","            td_price.string = f\"${row['Price']:,.2f}\"\n","            tr.append(td_price)\n","\n","            # Price Change (WoW)\n","            price_change_val, price_change_class = format_change(row['Price_WoW'], '%')\n","            td_price_change = soup.new_tag('td')\n","            td_price_change.string = price_change_val\n","            if price_change_class:\n","                td_price_change['class'] = price_change_class\n","            tr.append(td_price_change)\n","\n","            # Short Squeeze Score\n","            td_score = soup.new_tag('td')\n","            td_score.string = f\"{row['ShortSqueezeScore']:,.2f}\"\n","            tr.append(td_score)\n","\n","            # Score Change (WoW)\n","            score_change_val, score_change_class = format_change(row['Score_WoW'], '')\n","            td_score_change = soup.new_tag('td')\n","            td_score_change.string = score_change_val\n","            if score_change_class:\n","                td_score_change['class'] = score_change_class\n","            tr.append(td_score_change)\n","\n","            tbody.append(tr)\n","\n","    return soup\n","\n","def update_content(soup, report_date_str):\n","    \"\"\"Updates date, headlines, and takeaways.\"\"\"\n","\n","    # Update Date\n","    date_tag = soup.select_one('.header p')\n","    if date_tag:\n","        date_tag.string = report_date_str\n","\n","    # NOTE: For a full