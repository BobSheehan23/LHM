{"cells":[{"cell_type":"code","source":"import matplotlib.pyplot as plt\nimport numpy as np\n\n# --- Data for the Scatter Plot ---\n# ETF Ticker, On-Loan Value ($B), Utilization (%)\netf_data = {\n    'LQD': (6.0, 71.6),\n    'SPY': (4.1, 25.0), # Note: Utilization for SPY is illustrative to represent a liquid hedging tool.\n    'IWM': (3.9, 79.6),\n    'INDA': (1.6, 62.4)\n}\n\n# --- New Color Palette ---\ncolor_blue = '#0072B2'\ncolor_orange = '#D55E00'\ncolor_purple = '#785EF0'\ncolor_grey = '#585858' # A neutral grey for annotations\n\n# --- Create the Plot ---\nfig, ax = plt.subplots(figsize=(10, 7))\n\n# Plot each point individually to control color and labels\nax.scatter(etf_data['LQD'][1], etf_data['LQD'][0], s=200, color=color_blue, label='LQD', alpha=0.7, edgecolors='w', linewidth=1.5)\nax.scatter(etf_data['SPY'][1], etf_data['SPY'][0], s=200, color=color_grey, label='SPY', alpha=0.7, edgecolors='w', linewidth=1.5)\nax.scatter(etf_data['IWM'][1], etf_data['IWM'][0], s=200, color=color_orange, label='IWM', alpha=0.7, edgecolors='w', linewidth=1.5)\nax.scatter(etf_data['INDA'][1], etf_data['INDA'][0], s=200, color=color_purple, label='INDA', alpha=0.7, edgecolors='w', linewidth=1.5)\n\n# Add annotations for each point\nfor ticker, (value, util) in etf_data.items():\n    ax.text(util + 1, value, ticker, fontsize=12, va='center_baseline', ha='left', color=color_grey)\n\n# --- Formatting ---\nax.set_xlabel('Utilization (%)', fontsize=12)\nax.set_ylabel('On-Loan Value ($ Billions)', fontsize=12)\nax.set_title('On-Loan Value vs. Utilization for Key ETFs (June 2025)', fontsize=14, pad=20)\n\n# Add gridlines for better readability\nax.grid(True, which='both', linestyle='--', linewidth=0.5)\nax.spines['top'].set_visible(False)\nax.spines['right'].set_visible(False)\n\n# Set axis limits\nax.set_xlim(20, 85)\nax.set_ylim(0, 7)\n\n# Add explanatory quadrants (optional but good for analysis)\nax.axhline(y=np.mean([v[0] for v in etf_data.values()]), color='grey', linestyle=':', linewidth=1)\nax.axvline(x=np.mean([v[1] for v in etf_data.values()]), color='grey', linestyle=':', linewidth=1)\n\nax.text(84, 6.8, 'High Value / High Utilization\\n(Potential Crowding / Conviction)', ha='right', va='top', fontsize=10, color='grey')\nax.text(21, 6.8, 'High Value / Low Utilization\\n(Broad Hedging / Positioning)', ha='left', va='top', fontsize=10, color='grey')\n\n\nfig.tight_layout()\nplt.show()","outputs":[],"execution_count":null,"metadata":{}}],"metadata":{"colab":{"from_bard":true},"kernelspec":{"display_name":"Python 3","name":"python3"}},"nbformat":4,"nbformat_minor":0}