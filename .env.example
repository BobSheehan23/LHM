# Environment Configuration Template
# Copy this file to .env and fill in your actual API keys and settings

# FRED API Configuration
FRED_API_KEY=your_fred_api_key_here

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
QUANDL_API_KEY=your_quandl_key_here

# Database Configuration (if using)
DATABASE_URL=sqlite:///lhm_data.db

# Output Directories
OUTPUT_DIR=./output
CHARTS_DIR=./charts
DATA_DIR=./data

# Notification Settings (for automated reports)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Analysis Settings
DEFAULT_START_DATE=2020-01-01
DEFAULT_BENCHMARK=SPY
RISK_FREE_RATE_SYMBOL=^TNX

# Jupyter Settings
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_secure_token_here