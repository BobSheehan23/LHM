    "001_gdp_final_sales": {
      "title": "Real GDP vs Final Sales (3m ann.)",
      "arc": "Macro Dynamics",
      "tickers": ["GDPC1", "FINSLC1"],
      "frequency": "quarterly",
      "transform": {
        "method": "3m_annualized",
        "index_base": "2019-12",
        "index_value": 100,
        "resample": "monthly_step_or_quarterly_plot"
      },
      "hook": {
        "primary": "delta_3m_ann_vs_prior_quarter",
        "secondary": "percentile_10y"
      }
    },

